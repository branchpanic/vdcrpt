<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
        x:Class="Vdcrpt.Desktop.MainWindow"
        Title="vdcrpt">
    <StackPanel Spacing="12" Margin="16">
        <Label>vdcrpt</Label>

        <StackPanel>
            <Label>Video</Label>
            <Grid ColumnDefinitions="Auto *">
                <Button Grid.Column="0" Margin="0 0 4 0">Open...</Button>
                <TextBox Grid.Column="1" Margin="4 0 0 0"/>
            </Grid>
        </StackPanel>
        
        <StackPanel>
            <Label>Chunk Size</Label>
            <NumericUpDown />
        </StackPanel>

        <Grid ColumnDefinitions="* Auto *">
            <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0 0 4 0">
                <Label>Min Repetitions</Label>
                <NumericUpDown />
            </StackPanel>

            <TextBlock Grid.Column="1" Margin = "12 0 12 0" TextAlignment="Center" VerticalAlignment="Center">-</TextBlock>
            
            <StackPanel Orientation="Vertical" Grid.Column="2" Margin="4 0 0 0">
                <Label>Max Repetitions</Label>
                <NumericUpDown />
            </StackPanel>
        </Grid>

        <StackPanel>
            <Label>Iterations</Label>
            <NumericUpDown />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button>Corrupt</Button>
            <Button>Open Last Output</Button>
        </StackPanel>

        <ProgressBar />
        <TextBlock>Output appears here!</TextBlock>
    </StackPanel>
</Window>